<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Hiking Review Club</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= trail.image %>" alt="hiking trail">
                <div class="caption-full">
                    <h4><%= trail.name %></h4>
                    <p><%= trail.description %></p>
                    <em><p>Submitted By: <%= trail.author.username %></p></em>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/trails/<%= trail._id %>/comments/new">Add Comment</a>
                </div>
                <hr>
                <% trail.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago.</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }); %> 
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>